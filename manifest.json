{
  "manifest_version": 2,
  "name": "(hedger) React Developer Tools",
  "description": "Adds React debugging tools to the Chrome Developer Tools.",
  "version": "0.13.0",
  "icons": {
    "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png"
  },

  "background": {
    "scripts": [ "device/RegisterExtension.js" ],
    "persistent": false
  },

  "devtools_page": "main.html",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "main.html",
    "views/devpanel.html",
    "plugins/bananaslug/build/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "injected/GlobalHook.js",
        "plugins/bananaslug/build/content-script.bundle.js"
      ],
      "run_at": "document_start"
    }
  ]
}
